    <Content Include="Resources\Icon.vsmarketplace.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </Content>
    <Content Include="Resources\Icon.www.png">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
