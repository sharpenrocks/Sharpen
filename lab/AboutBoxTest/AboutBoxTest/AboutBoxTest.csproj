      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\FullStar.svg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
    </None>
    <None Update="Resources\HalfStarDark.svg">
      <CopyToOutputDirectory>Always</CopyToOutputDirectory>
